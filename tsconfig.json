{
  "compilerOptions": {
      "target": "ES2020",                    
      "module": "ESNext",                     
      "strict": true,
      "esModuleInterop": true,                 // Para interop con CommonJS
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",                     // Directorio para los archivos compilados
      "rootDir": "./",                        // Ra√≠z del proyecto
      "moduleResolution": "node",
      "resolveJsonModule": true                // Para importar archivos JSON si es necesario
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}